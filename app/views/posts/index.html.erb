<div>
    <%= image_tag @user.photo, alt: @user.name, class: "user-image" %>
    <h2><%= @user.name %></h2>
    <p>Number of posts: <%= @user.posts_counter %></p>
</div>

<div>
  <% @posts.each do |post| %>
    <%= link_to post_path(post) do %>
      <div>
        <div>
          <h2><%= post.title %></h2>
          <p><%= post.text %></p>
          <div>
            <p>Comments: <%= post.comments_counter %></p>
            <p>Likes: <%= post.likes_counter %></p>
          </div>
        </div>

        <div>
          <h3>Comments:</h3>
          <ul>
            <% post.recent_comments.each do |comment| %>
              <li>"<%= comment.text %>"</li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
