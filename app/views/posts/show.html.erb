<div>
    <h2><%= @post.title %></h2>
    <div>
        <p>Comments: <%= @post.comments_counter %></p>
        <p>Likes: <%= @post.likes_counter %></p>
    </div>
    <p><%= @post.text %></p>
</div>

<div>
    <ul>
        <% @comments.each do |comment| %>
            <li><%= comment.text %></li>
        <% end %>
    </ul>
</div>